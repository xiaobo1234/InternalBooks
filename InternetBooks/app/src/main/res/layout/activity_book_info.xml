<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.xiaobo.collegedesign.internetbooks.Activity.BookInfoActivity">

    <RelativeLayout
        android:id="@+id/book_info_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="#52CD99">

        <ImageView
            android:id="@+id/book_info_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="center"
            android:src="@drawable/ic_launcher"
            android:background="@drawable/backgrounnd_color_transparent_click"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="书籍信息"/>

        </RelativeLayout>

    <LinearLayout
        android:id="@+id/book_info_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_info_title"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书名："
                android:textColor="#333333"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/book_info_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="呵呵呵呵呵呵呵呵呵"
                android:textColor="#333333"
                android:textSize="18sp"
                android:singleLine="true"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者："
                android:textColor="#333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/book_info_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尼玛在等你"
                android:textColor="#333333"
                android:textSize="16sp"
                android:singleLine="true"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期："
                android:textColor="#666666"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/book_info_book_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-4-1"
                android:textColor="#666666"
                android:textSize="16sp"
                android:singleLine="true"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简介："
                android:textColor="#666666"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/book_info_book_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这个是什么鬼什么鬼什么鬼什么鬼什么鬼什么鬼什么鬼"
                android:textColor="#666666"
                android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_info_details"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/book_info_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/backgrounnd_lightblue_click">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入阅读"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/book_info_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backgrounnd_lightblue_click">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读取书签"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
